<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
	PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
	"http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>SpicsToMe.html</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>MailMeServices</servlet-name>
		<servlet-class>com.spicstome.server.services.MailMeServicesImpl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>MailMeServices</servlet-name>
		<url-pattern>/spicstome/MailMeServices</url-pattern>
	</servlet-mapping>

</web-app>

