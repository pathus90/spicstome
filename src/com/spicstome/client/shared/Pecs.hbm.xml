<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.spicstome.client.shared" default-lazy="false">

<class name="Pecs" select-before-update="true" table="pecs" polymorphism="implicit">
    
	<id name="id" type="long" column="id">
		<generator class="increment" />
	</id>
	<property name="name" type="string" column="name" />
	<property name="order" type="int" column="order_in_folder" />
	
	<many-to-one name="folder" class="Folder" column="id_folder_parent"
		not-null="false" unique="false"  />
	
	<many-to-one name="image" column="id_image" class="Image"
		unique="true" cascade="delete" />
	
	<joined-subclass name="Article" table="article" extends="Pecs">
	    <key column="id"/>
		<set name="logs" table="logs_articles" lazy="true">
			<key column="id_article" />
			<many-to-many class="Log" column="id_log" />
		</set>
	</joined-subclass>
	
	<joined-subclass name="Folder" table="folder" extends="Pecs">
	    <key column="id"/>
		<set name="content" inverse="false" lazy="true" fetch="select"
			cascade="delete" >
			<key>
				<column name="id_folder_parent" not-null="true" />
			</key>
			<one-to-many class="Pecs" />
		</set>
	</joined-subclass>
</class>
        
</hibernate-mapping>